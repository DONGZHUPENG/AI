{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "Image",
                  "url": "http://messagecardplayground.azurewebsites.net/assets/Mostly%20Cloudy-Square.png",
                  "size": "Small"
                }
              ],
              "width": "auto"
            },
            {
              "type": "Column",
              "verticalContentAlignment": "Center",
              "items": [
                {
                  "type": "TextBlock",
                  "id": "Header",
                  "size": "Large",
                  "weight": "Bolder",
                  "text": "EMAIL OVERVIEW"
                }
              ],
              "width": "stretch"
            }
          ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "Image",
                  "id": "UserAvatar",
                  "style": "Person",
                  "url": "{SenderIcon}",
                  "size": "Small"
                }
              ],
              "width": "auto"
            },
            {
              "type": "Column",
              "horizontalAlignment": "Right",
              "verticalContentAlignment": "Center",
              "items": [
                {
                  "type": "TextBlock",
                  "id": "UserName",
                  "horizontalAlignment": "Center",
                  "color": "Accent",
                  "text": "{Sender}"
                }
              ],
              "width": "stretch"
            },
            {
              "type": "Column",
              "id": "EmailSubject",
              "verticalContentAlignment": "Center",
              "items": [
                {
                  "type": "TextBlock",
                  "id": "Subject",
                  "horizontalAlignment": "Center",
                  "text": "{Subject}"
                }
              ],
              "width": "stretch"
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "id": "EmailBody",
          "text": "{EmailContent}",
          "wrap": true
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}